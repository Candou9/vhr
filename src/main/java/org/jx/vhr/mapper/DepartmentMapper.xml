<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jx.vhr.mapper.DepartmentMapper">

    <resultMap type="org.jx.vhr.model.Department" id="DepartmentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="parentId" column="parentId" jdbcType="INTEGER"/>
        <result property="depPath" column="depPath" jdbcType="VARCHAR"/>
        <result property="enabled" column="enabled" jdbcType="BIT"/>
        <result property="isParent" column="isParent" jdbcType="BIT"/>
    </resultMap>

<!--    实现递归-->
    <resultMap type="org.jx.vhr.model.Department" id="DepartmentWithChildren" extends="DepartmentMap">
        <collection property="children" ofType="org.jx.vhr.model.Department" select="org.jx.vhr.mapper.DepartmentMapper.getAllDepartmentByParentId" column="id"/>
    </resultMap>

    <select id="getAllDepartmentByParentId" resultMap="DepartmentWithChildren">
        select * from department where parentId=#{pid};
    </select>
    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentMap">
        select id,
               name,
               parentId,
               depPath,
               enabled,
               isParent
        from vhr.department
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentMap">
        select id,
               name,
               parentId,
               depPath,
               enabled,
               isParent
        from vhr.department limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DepartmentMap">
        select
        id, name, parentId, depPath, enabled, isParent
        from vhr.department
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="parentId != null">
                and parentId = #{parentId}
            </if>
            <if test="depPath != null and depPath != ''">
                and depPath = #{depPath}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
            <if test="isParent != null">
                and isParent = #{isParent}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.department(name, parentId, depPath, enabled, isParent)
        values (#{name}, #{parentId}, #{depPath}, #{enabled}, #{isParent})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.department(name, parentId, depPath, enabled, isParent)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.parentId}, #{entity.depPath}, #{entity.enabled}, #{entity.isParent})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vhr.department(name, parentId, depPath, enabled, isParent)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.parentId}, #{entity.depPath}, #{entity.enabled}, #{entity.isParent})
        </foreach>
        on duplicate key update
        name = values(name) , parentId = values(parentId) , depPath = values(depPath) , enabled = values(enabled) ,
        isParent = values(isParent)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vhr.department
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="parentId != null">
                parentId = #{parentId},
            </if>
            <if test="depPath != null and depPath != ''">
                depPath = #{depPath},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
            <if test="isParent != null">
                isParent = #{isParent},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from vhr.department
        where id = #{id}
    </delete>

</mapper>

